<div style='display:none;'>
	<table class='tablesorter' style='text-align: center'>
		<tr><th>Fattura</th><th>conducente</th><th>cliente</th><th>righe</th><th>Importo</th></tr>
	{% for fattura in lista %}
		<tr>
			<td>
				{{fattura.descrittore}}
				<a href='{% url tamFatturaRicevuta id_fattura=fattura.id %}' style='display:block'><img src='/media/fatture/invoice-icon3.png' /></a>
				emessa il {{fattura.data|date:"l j F Y"}}
			</td>
			<td>
				{{fattura.mittente}}
			</td>
			<td>
				{% if fattura.cliente %}
					<a href='{%url tamClienteId fattura.cliente.id %}?next={{ full_request_path }}'>{{fattura.cliente.nome}}</a>
				{% else %}	
					{% if fattura.passeggero %}
						Privato:<br/>
						<a href='{%url tamPrivatoId fattura.passeggero.id %}?next={{ full_request_path }}'>{{fattura.passeggero.nome}}</a>
					{% else %}
						{{ fattura.destinatario }}
					{% endif %}
				{% endif %}
				<div class='dati'>{{ fattura.emessa_a }}</div>	
			</td>
			<td>{{fattura.righe.count}}</td>
			<td class='prezzo'>{{fattura.val_totale|floatformat:"-2"}} â‚¬</td>
		</tr>
	{% endfor %}
	</table>
	{% if perms.fatturazione.generate %}
	<div>
		<a href='{% url tam-nuova-fattura-ricevuta %}'>
		<img src='/media/addbtn.png' id='newFattura' class='actionButton' title='Nuova ricevuta manuale' />
		Nuova ricevuta manuale.
		</a>
	</div>
	{% endif %}
</div>