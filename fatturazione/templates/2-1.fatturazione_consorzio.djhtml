{% extends "base.html" %}
{% load media %}
{% block title %}Generazione {{ tipo }} &raquo; {{ block.super }} {% endblock %}
{% block content %}

<h2 class='fatturaTipo1'>Generazione fatture consorzio</h2>

{# {% if error_message %}<div class='errorlist'>{{error_message}}</div>{% endif %} #}
<div class='fatturaTipo1'>
		{{ fatture }} fatture / {{ lista.count }} corse.<br />
		{% if lista %}
		<form method="post" action="">
		<div id='gotoConsorzio' class='floatingBlock'>
			<a href="#generaConsorzio"><img src='/media/frecciagiu.png' title='genera fatture consorzio'></a>
		</div>
		<input type='hidden' name='anno' value='{{anno}}'>
		<input type='hidden' name='progressivo' value='{{progressivo_iniziale}}'>
		<table class='tablesorter' id='table_consorzio' style="text-align:center" >
		<thead>
			<tr>
				<th>Fattura consorzio</th>
				<th>Cliente</th>
			    <th>Corsa</th>
			    <th>Note</th>
			    <th>Prezzo lordo</th>
			    <th>Conducente</th>
			</tr>
		</thead>
		{% for viaggio in lista %}
			<tr>
				<td>
					{% if viaggio.progressivo_fattura %}
						{% ifchanged viaggio.progressivo_fattura %}
						FC{{viaggio.anno_fattura}}/{{viaggio.progressivo_fattura}}
						{% endifchanged %}
					{%endif%}
				</td>
				<td>
				<input type='hidden' name='id' value='{{viaggio.id}}' >
				{% ifchanged viaggio.cliente_id viaggio.passeggero_id %}
					{% if viaggio.cliente %}<a href="{% url tamClienteId viaggio.cliente.id%}" target='_blank'>{{ viaggio.cliente }}</a>
						{% if viaggio.cliente.dati %}<div class='dati'>{{ viaggio.cliente.dati }}</div>{% endif %}
					{% else %}
						<i>Privato</i>
						{% if viaggio.passeggero %}:<br/><a href="{% url tamPrivatoId viaggio.passeggero.id %}" target='_blank'>{{ viaggio.passeggero }}{% if viaggio.passeggero.dati %}</a><div class='dati'>{{ viaggio.passeggero.dati }}</div>{% endif %}{%endif%}
					{% endif %}
				{% endifchanged %}
				</td>
				<td>{% include "inc.cellaViaggio.djhtml" %}</td>
				<td>{% include "corse/cella_note.inc.html" %}</td>
				<td>{{viaggio.prezzo}}
					{% include "corse/flags.inc.html" %}
				</td>
				<td>{{viaggio.conducente.nick}}</td>
			</tr>
		{% endfor %}
		</table>
		<a name="generaConsorzio">
			<input type="submit" id="genera_consorzio" name="generate" value="Genera fatture consorzio"/>
		</a>
		</form>
		
		{% endif %}
</div>

</div>
{% endblock %}

{% block bottom %}
<script type="text/javascript">
	scrollableGoto($('#gotoConsorzio'));
</script>
{% endblock bottom %}
